        }

        .custom-list li {
            display: inline; /* Hiển thị các mục li theo hàng ngang */
            margin-right: 10px; /* Khoảng cách giữa các mục */
        }

        .custom-list li::after {
            content: "|"; /* Thêm dấu | sau mỗi mục */
            margin-left: 10px; /* Khoảng cách giữa mục và dấu | */
        }

        .custom-list li:last-child::after {
            content: ""; /* Không hiển thị dấu | sau mục cuối cùng */
        }
