            position: relative; /* Để định vị dropdown */
        }
        .dropdown-btn {
            background-color: #283350;
            border: none; /* Remove border */
            color: white; /* Ensure text color is visible */
            padding: 10px; /* Add some padding for better appearance */
            cursor: pointer; /* Change cursor to pointer */
        }

        .dropdown-content {
            display: none; /* Ẩn dropdown ban đầu */
            position: absolute; /* Định vị tuyệt đối */
            background-color: #1f294d; /* Màu nền dropdown */
            min-width: 200px; /* Chiều rộng tối thiểu của dropdown */
            box-shadow: 0px 8px 16px 0px rgba(0,0,0,0.2);
            z-index: 1; /* Đảm bảo dropdown hiển thị trên các phần tử khác */
        }

        .dropdown-content ul {
            list-style: none; /* Xóa kiểu danh sách mặc định */
            padding: 0;
            margin: 0;
        }

        .dropdown-content li {
            padding: 12px 16px; /* Khoảng cách cho từng mục */
        }

        .dropdown-content li a {
            color: white; /* Màu chữ */
            text-decoration: none; /* Không có gạch chân */
        }

        .dropdown-content li:hover {
            background-color: #3a4576; /* Màu nền khi hover */
        }

        /* Hiển thị dropdown khi hover */
        .product-category:hover .dropdown-content {
            display: block; /* Hiển thị dropdown khi hover vào danh mục */
        }


