
@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Giỏ hàng</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            margin: 0;
            padding: 0;
            background-color: #f5f5f5;
        }

        .container {
            width: 740px;
            margin: auto;
            padding: 20px;
            background-color: white;
            box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.1);
            float: left;
            margin-left: 50px;
        }

        .container_vch {
            margin: auto;
            padding: 20px;
            background-color: white;
            box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.1);
            float: right;
            margin-right: 30px;
            width: 310px;
        }

        .container_tong {
            width: 1250px;
            margin: 0;
            padding: 0;
            background-color: lightgray;
            box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.1);
        }

        .cart-item {
            display: flex;
            justify-content: space-between;
            margin-bottom: 20px;
            padding-bottom: 10px;
            border-bottom: 1px solid #ccc;
        }

            .cart-item img {
                width: 100px;
                height: 100px;
            }

        .item-details {
            flex: 3;
            padding-left: 20px;
        }


        .item-price, .item-quantity {
            flex: 1;
            text-align: center;
        }

        .item-actions {
            flex: 1;
            text-align: right;
        }

        .cart-summary {
            margin-top: 20px;
            padding-top: 20px;
            border-top: 1px solid #ccc;
            text-align: left;
            background-color: white;
        }

            .cart-summary span {
                font-weight: bold;
                font-size: 18px;
            }

        .voucher {
            display: flex;
            justify-content: space-between;
            margin-bottom: 20px;
        }

        .btn {
            cursor: pointer;
            padding: 10px 20px;
            background-color: lightblue;
            color: white;
            border: none;
            border-radius: 5px;
            font-size: 10px;
        }

            .btn:hover {
                background-color: #0056b3;
            }

        .promotion {
            width: auto;
        }
    </style>
</head>
<body>
    <div class="container_tong">
        <div class="container">
            <h2>Thông tin sản phẩm</h2>

            <div class="cart-item">
                <img src="~/HinhAnhTK/lotchuot.jpg"
                     alt="Bàn di chuột" />
                <div class="item-details">
                    <h4>Bàn Di Chuột Laptop TNC</h4>
                    <p>49.000đ</p>
                </div>
                <div class="item-quantity">
                    <input type="number" value="1" min="1">
                </div>
                <div class="item-actions">
                    <button class="btn">Xóa</button>
                </div>
            </div>

            <div class="cart-item">
                <img src="~/HinhAnhTK/tainghe1.jpg"
                     alt="Tai nghe" />
                <div class="item-details">
                    <h4>Tai Nghe Razer Kraken V3 HyperSense</h4>
                    <p>2.369.000đ</p>
                    <div class="promotion">
                        <p>Khuyến mãi áp dụng:</p>
                        <ul>
                            <li>Giảm 5% tối đa 100.000đ khi mua kèm Bàn Phím Cơ</li>
                            <li>Giảm 5% tối đa 100.000đ khi mua kèm Chuột Gaming</li>
                            <li>Giảm 5% tối đa 100.000đ khi mua kèm Bàn Di Chuột</li>
                            <li>Giảm 5% tối đa 100.000đ khi mua kèm Tay Cầm Chơi Game</li>
                        </ul>
                    </div>
                </div>
                <div class="item-quantity">
                    <input type="number" value="1" min="1">
                </div>
                <div class="item-actions">
                    <button class="btn">Xóa</button>
                </div>
            </div>
        </div>

        <div class="container_vch">
            <div class="voucher">
                <div>

                    <label for="voucher-code">Nhập mã voucher</label>
                    <input type="text" id="voucher-code" placeholder="Nhập mã khuyến mãi">
                </div>
                <button class="btn">Áp dụng</button>
            </div>

            <div class="cart-summary">
                <h2> Thông tin giỏ hàng </h2>
                <p>Tổng số lượng sản phẩm: <span id="total-quantity"> 2 </span></p>
                <p>Tổng chi phí: <span id="total-price"> 2.418.000đ </span></p>
                <button class="btn">Tiến hành thanh toán</button>
            </div>

        </div>
    </div>

    <script>
        // Giả lập tính toán tổng giá tiền
        const updateCartSummary = () => {
            let totalQuantity = 0;
            let totalPrice = 0;

            const quantities = document.querySelectorAll('.item-quantity input');
            const prices = [49000, 2369000];  // Giá của các sản phẩm

            quantities.forEach((quantity, index) => {
                const qty = parseInt(quantity.value);
                totalQuantity += qty;
                totalPrice += qty * prices[index];
            });

            document.getElementById('total-quantity').innerText = totalQuantity;
            document.getElementById('total-price').innerText = totalPrice.toLocaleString('vi-VN') + 'đ';
        }

        // Cập nhật khi thay đổi số lượng
        document.querySelectorAll('.item-quantity input').forEach(input => {
            input.addEventListener('change', updateCartSummary);
        });
    </script>

</body>
</html>